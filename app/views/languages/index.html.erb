<p style="color: green"><%= notice %></p>
<div class="container">
  <div class="row mb-5">
    <div class="col">
      <h1 class="text-muted">Languages</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-sm border border-light">
        <thead class="table-light">
        <tr>
          <th scope="col">Language</th>
          <th scope="col">Status</th>
          <th scope="col">Sort Priority</th>
          <th scope="col">Edit</th>
        </tr>
        </thead>
        <tbody>
        <% @languages.each do |language| %>
          <tr>
            <td><%= language.language_name %></td>
            <td><%= language.active_language %></td>
            <td><%= language.sort_priority %></td>
            <td>
              <%= link_to edit_language_path(language) do %>
                <i class="fa-solid fa-pen"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
      <%= link_to "New language", new_language_path, class: "btn btn-primary mt-2" %>
    </div>
  </div>
</div>